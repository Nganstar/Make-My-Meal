<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:id="@+id/linearSteps"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="160dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearImage"
        >

        <Button
            android:id="@+id/enter_steps_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="Enter Steps"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="322dp"/>

        <EditText
            android:id="@+id/steps_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="380dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/add_receipe_button"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:onClick="AddRecipe"
        android:text="Add Recipe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearSteps"
        />

    <LinearLayout
        android:id="@+id/linearImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="236dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearSteps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/enter_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:text="Enter Image"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="248dp"/>

        <EditText
            android:id="@+id/image_text_edit"
            android:layout_width="269dp"
            android:layout_height="45dp"
            android:layout_weight="1"

            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="134dp"
            tools:layout_editor_absoluteY="248dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearImage">

        <Button
            android:id="@+id/enter_title_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:text="Enter Title"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="65dp"/>

        <EditText
            android:id="@+id/title_edit_text"
            android:layout_width="269dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="187dp"
            tools:layout_editor_absoluteY="88dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearIngredients"
        android:layout_width="0dp"
        android:layout_height="169dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearSteps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearTitle"
        app:layout_constraintVertical_bias="0.154">

        <Button
            android:id="@+id/enter_ingredients_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="Enter Ingredients"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="246dp"/>

        <EditText
            android:id="@+id/ingredients_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="486dp"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>